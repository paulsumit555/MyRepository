<% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
 <% end -%>


<%= form_for :postauthor, url: post_posts_author_index_path do |pa| %>
  
  <p>
    New Author
    <%= pa.text_field :name %>    
  </p>
	 <%= fields_for :post do |f| %>
 	<p>
 		<%= f.label 'Post title' %><br>
    	<%= f.text_field :title %>
    </p>
    
    <p>
    	<%= f.label :text %><br>
    	<%= f.text_area :text %>    
  	</p>
  
  	<p>
	    <%= f.label :City %><br>
	    <%= collection_select(:post, :city_id, City.all, :id, :name) %>    
  	</p>
    	
   <% end %>
 
  <p>
    <%= pa.submit %>
  </p>
<% end %>