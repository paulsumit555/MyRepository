
<table>
  <tr>
    <th>Title</th>    
    <th>Text</th>
    <th>City</th>
  </tr>
 
<% @posts.each do |post| %>
  <tr>
  	
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= post.city['name'] %></td>
    <td><%= link_to 'Show', post_path(post) %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Delete Post',post_path(post),method: :delete, data: { confirm: 'Do you want to continue?' } %></td>
    <td><%= link_to 'New Author', new_post_posts_author_path(post) %></td>
    <td><%= link_to 'Delete City', posts_deleteCity_path(post.city_id) %></td>
  </tr>
<% end %>
<td><%= link_to 'Test non resourcefull route:show', showAll_test_path  %></td>
</table>

