<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label 'Post title' %><br>
    <%= f.text_field :title %>
    
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>    
  </p>
  
  <p>
    <%= f.label :City %><br>
    <%= collection_select(:post, :city_id, City.all, :id, :name , {:prompt => "Please select"}) %>    
  </p>
 	
  <p>
    <%= f.submit %>
  </p>
<% end %>

